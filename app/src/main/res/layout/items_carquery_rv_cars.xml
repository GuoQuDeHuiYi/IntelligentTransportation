<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/car_query_radiusback"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/items_car_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="鲁A10001"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/items_car_noHandle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="未处理违章2次"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/items_car_deductScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扣 2 分"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/items_car_forfeit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="罚款 250 元"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/mSearchResult_CarDetails_Remove"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_add_red"
        app:srcCompat="@drawable/ic_clear_black_24dp" />
</LinearLayout>